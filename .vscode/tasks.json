{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe compilar archivo activo (SFML estático)",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-I\"C:/msys64/ucrt64/include\"",
        "-o",
        "${workspaceFolder}\\${fileBasenameNoExtension}.exe",
        "-L\"C:/msys64/ucrt64/lib\"",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-lopengl32",
        "-lfreetype",
        "-lwinmm",
        "-lgdi32"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Tarea generada para compilar SFML estático con MSYS2 UCRT64."
    }
  ]
}
